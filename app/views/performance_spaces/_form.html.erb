<%= simple_form_for([@theatre, @performance_space]) do |f| %>
  <%= f.input :name, label: "Performance space name" %>
  <%= f.input :type, label: "Type" %>
  <%= f.input :type_other, label: "Type: Other (please specify)" %>
  <%= f.input :capacity, label: "Capacity" %>
  <%= f.input :programme, label: "Programme" %>
  <%= f.input :grouping, label: "Grouping" %>
  <%= f.input :include, label: "Include?" %>
  <%= f.input :notes, label: "Notes" %>
  <%= f.submit class: "btn btn-success" %>
<% end %>
