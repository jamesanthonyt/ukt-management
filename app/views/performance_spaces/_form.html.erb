<%= simple_form_for([@theatre, @performance_space]) do |f| %>
  <%= f.input :name, label: "Performance space name" %>
  <%= f.input :space_type, collection: [
    'Main Auditorium',
    'Subsidiary Auditorium',
    'Concert Hall',
    'Cinema',
    'Cabaret Space',
    'Studio Space',
    'Other'
  ] %>
  <%= f.input :capacity, input_html: { min: '0' } %>
  <%= f.input :programme, collection: [
    'Only produced in-house',
    'More produced in-house',
    'More presented/toured',
    'Only presented/toured'
  ] %>
  <% if @performance_space.persisted? %>
    <%= f.input :include, label: "Include in analyses?" %>
  <% end %>
  <%= f.input :notes %>
  <%= f.submit class: "btn btn-success" %>
  <%= link_to "Cancel", :back %>
<% end %>
