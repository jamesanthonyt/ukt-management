<h2>
  <%= @theatre.name %>
  <%= "(#{@theatre.managed_by})" unless @theatre.managed_by.empty? %> |
  <%= link_to edit_theatre_path(@theatre.id) do %>
    <i class="fas fa-edit"></i>
  <% end %> |
  <%= link_to theatre_path(@theatre), method: :delete do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>
</h2>

<ul class="list-group list-group-flush">
  <li class="list-group-item"><strong>Onboarded:</strong> [TBD]</li>
  <li class="list-group-item"><strong>AF Source Organisation:</strong> <%= @theatre.af_source_org_id %></li>
  <li class="list-group-item"><strong>Notes:</strong> <%= @theatre.notes %></li>
</ul>

<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Performance Space</th>
      <th scope="col">Grouping</th>
      <th scope="col">Include?</th>
    </tr>
  </thead>
  <tbody>
    <% @performance_spaces.each do |space| %>
    <tr>
      <td><%= link_to space.name, theatre_performance_space_path(@theatre, space.id) %></td>
      <td><%= space.grouping %></td>
      <td><%= space.include %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<ul class="list-group list-group-flush">
  <li class="list-group-item">
    <%= link_to 'Add new performance space', new_theatre_performance_space_path(@theatre) %>
  </li>
  <li class="list-group-item">
    <%= link_to 'Back to all theatres', theatres_path %>
  </li>
</ul>

