<h2>
  <%= @theatre.name %> |
  <%= link_to 'Edit', edit_theatre_path(@theatre.id) %>
</h2>

<ul class="list-group list-group-flush mt-3 mb-3">
  <li class="list-group-item"><strong>Managed by:</strong> <%= @theatre.managed_by %></li>
  <li class="list-group-item"><strong>AF Source Organisation:</strong> <%= @theatre.af_source_org_id %></li>
  <li class="list-group-item"><strong>Included in analysis:</strong> <%= @theatre.include %></li>
  <li class="list-group-item"><strong>Status:</strong> <%= @theatre.status %></li>
  <li class="list-group-item"><strong>Notes:</strong> <%= @theatre.notes %></li>
</ul>

<h5 class="mt-4">
  Performance spaces | <%= link_to 'Add new performance space', new_theatre_performance_space_path(@theatre) %>
</h5>

<% if @performance_spaces.count > 0 %>
  <table class="table table-striped table-hover mt-3">
    <thead class="thead-light">
      <tr>
        <th scope="col">Performance Space</th>
        <th scope="col">Grouping</th>
        <th scope="col">Include?</th>
      </tr>
    </thead>
    <tbody>
      <% @performance_spaces.each do |space| %>
      <tr>
        <td><%= link_to space.name, theatre_performance_space_path(@theatre, space.id) %></td>
        <td><%= space.grouping %></td>
        <td><%= space.include %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<h5 class="mt-4">
  AF venues | <%= link_to 'Edit mapping', theatre_af_venues_path(@theatre) %>
</h5>

<% if @af_venues.count > 0 %>
  <table class="table table-striped table-hover mt-3">
    <thead class="thead-light">
      <tr>
        <th scope="col">Audience Finder Venue</th>
        <th scope="col">Performance Space</th>
      </tr>
    </thead>
    <tbody>
      <% @af_venues.each do |venue| %>
        <tr>
          <td><%= venue.venue_name %></td>
          <% if venue.performance_space_id.nil? %>
            <td></td>
          <% else %>
            <td>
              <%= PerformanceSpace.find(venue.performance_space_id) %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>



