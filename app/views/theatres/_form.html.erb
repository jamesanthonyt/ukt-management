<%= simple_form_for(@theatre) do |f| %>
  <%= f.input :name, label: "Theatre name" %>
  <%= f.input :management, label: "Type", collection: [
    'Independent',
    'ATG',
    'HQ Theatres',
    'SellaDoor'
  ] %>
  <%= f.input :source_org_id, label: "AF Source Org", collection:
    SourceOrg.all
   %>
  <% if @theatre.persisted? %>
    <%= f.input :include, label: "Include in project?" %>
  <% end %>
  <%= f.input :notes, label: "Notes" %>
  <%= f.submit class: "btn btn-success" %>
  <%= link_to "Cancel", :back %>
<% end %>
