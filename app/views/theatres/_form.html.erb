<%= simple_form_for(@theatre) do |f| %>
  <%= f.input :name, label: "Theatre name" %>
  <%= f.input :managed_by, label: "Managed by" %>
  <%= f.input :af_source_org_id, label: "AF Source Org ID" %>
  <%= f.input :notes, label: "Notes" %>
  <%= f.submit class: "btn btn-success" %>
  <%= link_to "Cancel", :back %>
<% end %>
